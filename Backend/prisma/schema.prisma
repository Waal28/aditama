generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum TipeAkses {
  admin
  teknisi
}
model Pengguna {
  id        Int @id @unique @default(autoincrement())
  nama      String
  username  String @unique
  tipeAkses TipeAkses
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pelanggan {
  id         Int @id @unique @default(autoincrement())
  nama       String
  alamat     String
  no_hp      String 
  email      String
  paketWifi  String
  transaksi  Transaksi[]
  longitude  Float
  latitude   Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PaketWifi {
  id              Int @id @unique @default(autoincrement())
  nama            String
  mbps            Int
  tarifPerBulan   Int 
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Transaksi {
  id            Int @id @unique @default(autoincrement())
  tagihan       Int
  status        String
  bulan         String
  tahun         Int
  pelanggan     Pelanggan @relation(fields: [pelangganId], references: [id], onDelete: Cascade)
  pelangganId   Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Laporan {
  id                      Int @id @unique @default(autoincrement())
  teknisi                 String
  pelanggan               String
  tgl_pengerjaan          DateTime
  alamat_pelanggan        String
  longitude               Float
  latitude                Float
  keterangan              String
  foto_sesudah_perbaikan  String
  foto_sebelum_perbaikan  String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}